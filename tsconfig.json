{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/sweepstake/index.jsx",
    "src/pages/sweepstake/[id].jsx",
    "src/pages/sweepstake/rolemanager/index.jsx",
    "src/pages/sweepstake/mysweepstakes/index.jsx",
    "src/pages/sweepstake/mydonations/index.jsx",
    "src/pages/sweepstake/mintform/index.jsx",
    "src/pages/api/ipfs.js"
  ],
  "exclude": ["node_modules"]
}
